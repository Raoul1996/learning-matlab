% x(n) = 2n + 5 (-4 <= n <= -1)
% x(n) = 6 (0 <= n <= 4)
% x(n) = 0 ÆäËû
n1 = -4 : -1;
x1 = 2 * n1 +5;
n2 = 0 : 4;
x2 = 6;
n = -10 : 10;
N=length(n);
y1=zeros(1,N);
y2=zeros(1,N); 
n=min([n1,n2]):max([n1,n2]);
y1(find(n>=min(n1))&(n<=max(n1)))=x1; 
y2(find(n>=min(n2))&(n<=max(n2)))=x2; 

x=y1+y2; 
stem(n,x,'filled'); 
axis([-10,max(n),1.1*min(x),1.1*max(x)]);
ylabel('x(n)');